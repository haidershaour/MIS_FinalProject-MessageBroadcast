<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textFrequency"
        android:layout_width="98dp"
        android:layout_height="27dp"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.463" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="353dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:ems="10"
        android:hint="@string/enter_the_text_to_convert"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="83dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button"
        android:layout_marginEnd="-228dp"
        android:layout_marginRight="-228dp"
        android:layout_marginTop="206dp"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.DeviceDefault.Light.Button.Small"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button2"
        android:layout_marginStart="18dp"
        android:text="Transmit"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="-206dp"
        android:editable="false"
        android:text="Morse:"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.DropDownItem"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/textView" />

    <TextView
        android:id="@+id/textReturnValue"
        android:layout_width="352dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:text="Received Text"
        android:textColor="#000000"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.DeviceDefault.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:text="clear" />

    <Button
        android:id="@+id/trans"
        style="@android:style/Widget.DeviceDefault.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:text="Translate" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:editable="false"
        android:text="Noiseless Message Broadcast"
        android:textAlignment="center"
        android:textColor="#fb233cc9"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:editable="false"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="82dp"
        android:textColor="#000000"
        android:text="Note: Put a space before typing"
        tools:ignore="DuplicateIds"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/editText" />

</RelativeLayout>